{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "components/*": ["./src/app/components/*"],
      "api/*": ["./src/app/api/*"],
      "info/*": ["./info/*"],
      "icons": ["./icons/index.ts"],
      "heroIcons": ["./icons/heroes/index.ts"],
      "heroSkillsIcons": ["./icons/heroes/skills.ts"],
      "bossIcons": ["./icons/bosses/index.ts"],
      "types": ["./src/app/api/types.ts"],
      "dictionaries": ["./src/app/api/dictionaries.ts"],
      "classes": ["./src/app/api/classes.ts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/__tests__/*"],
  "exclude": ["node_modules"]
}
